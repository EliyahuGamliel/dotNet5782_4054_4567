<Page x:Class="PL.DronePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="800"
      Title="DronePage"
      Background="SteelBlue">

    <Grid Name="MainGrid" Margin="0,4,0,-4">
        <!-- Display Page of Drone's Action -->
        <Grid Name="DroneListGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="350*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <Grid Name="UpGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
                <StackPanel HorizontalAlignment="Left" Margin="50,58,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock  FontSize="20" FontFamily="/font/#Alef" FontWeight="Bold" Text="The Id of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock  FontSize="15" FontFamily="/font/#Alef" Name="idDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="50,118,0,0" VerticalAlignment="Top" Width="234" Height="107">
                    <TextBlock FontSize="20" FontFamily="/font/#Alef" FontWeight="Bold" Text="The Model of the Drone:" TextWrapping="Wrap"/>
                    <TextBox  FontSize="15" FontFamily="/font/#Alef" Name="modelDrone" Text="" TextWrapping="Wrap" TextChanged="UpdateModel"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Width="288" Height="107">
                    <TextBlock FontSize="20" FontFamily="/font/#Alef" FontWeight="Bold" Text="The MaxWeight of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock FontSize="15" FontFamily="/font/#Alef" Name="maxWightDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="50,252,0,0" VerticalAlignment="Top" Width="251" Height="107">
                    <TextBlock FontSize="20" FontFamily="/font/#Alef" FontWeight="Bold" Text="The Battery of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock FontSize="20" FontFamily="/font/#Alef" Name="batteryDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="50,316,0,0" VerticalAlignment="Top" Width="237" Height="107">
                    <TextBlock FontSize="20" FontFamily="/font/#Alef" FontWeight="Bold" Text="The Status of the Drone:" TextWrapping="Wrap" Width="250"/>
                    <TextBlock  FontSize="15" FontFamily="/font/#Alef" Name="statusDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="50,380,0,0" VerticalAlignment="Top" Width="338" Height="107">
                    <TextBlock FontSize="16" FontFamily="/font/#Alef" Name="locationDrone" TextWrapping="Wrap" Width="333"><Run FontWeight="Bold" Text="The current Location of the Drone:"/></TextBlock>
                </StackPanel>

                <StackPanel HorizontalAlignment="Left" Margin="322,58,0,0" VerticalAlignment="Top" Width="234" Height="377">
                    <TextBlock FontSize="20" FontFamily="/font/#Alef" FontWeight="Bold" Text="The parcel in Drone:" TextWrapping="Wrap"/>
                    <TextBlock FontSize="15" FontFamily="/font/#Alef" Name="parcelDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <Image x:Name="droneWithParcel" Margin="570,73,43,265" Visibility="Hidden" Stretch="Fill" Source="img\droneWithParcel.jpg"/>
                <Image x:Name="droneWithoutParcel"  Margin="570,73,43,265" Visibility="Hidden" Stretch="Fill" Source="img\droneWithoutParcel.jpg"/>
                <Rectangle HorizontalAlignment="Left" Height="140" Margin="565,68,0,0" Stroke="Black" VerticalAlignment="Top" Width="182"/>
            </Grid>
            <Grid Name="MiddleGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="1" VerticalAlignment="Stretch" Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions >
                <Button Background="PowderBlue" BorderBrush="Black" FontFamily="/font/#Alef" FontSize="16" Name="updateDrone" Content="Update the Drone" Grid.Column="0" IsEnabled="False" Click="Update_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button  Background="PowderBlue" BorderBrush="Black" FontFamily="/font/#Alef" FontSize="16" Name="assignDrone" Content="Assign the Drone &#xa;      to Parcel" Grid.Column="1" IsEnabled="False" Click="Assign_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button  Background="PowderBlue" BorderBrush="Black" FontFamily="/font/#Alef" FontSize="16" Name="pickUpDrone" Content="PickUp the Parcel &#xa;  fron Customer" Grid.Column="2" IsEnabled="False" Click="PickUp_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Background="PowderBlue" BorderBrush="Black" FontFamily="/font/#Alef" FontSize="16" Name="deliverDrone" Content="Deliver Parcel &#xa; by the Drone" Grid.Column="3" IsEnabled="False" Click="Deliver_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
            <Grid Name="DownGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="2" VerticalAlignment="Stretch" Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions >
                <Button Background="PowderBlue" BorderBrush="Black" FontFamily="/font/#Alef" FontSize="16" Name="sendDrone" Content="Send the Drone &#xa;  to Charging" Grid.Column="0" IsEnabled="False" Click="Send_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button FontFamily="/font/#Alef" FontSize="16" Background="PowderBlue" BorderBrush="Black" Name="releaseDrone" Content="Release the Drone &#xa;   from Charging" Grid.Column="1" IsEnabled="False" Click="Release_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button BorderBrush="Black" Margin="10,8,10,8" Background="Red" FontFamily="font/#Alef" FontWeight="Bold" Grid.Column="3" FontSize="16" Content="Click to Return Back" Click="Exit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
        <!-- Display Page of Drone Addition -->
        <Grid Name="DroneAddGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="350*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <Grid Name="Down2Grid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="2" VerticalAlignment="Stretch" Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions >
                <Button BorderBrush="Black" Background="PowderBlue" FontFamily="/font/#Alef" FontWeight="Bold" FontSize="16" Content="Click to Add" Grid.Column="0" Click="Add_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="Background" Value="PowderBlue"/>
                            <Setter Property="Margin" Value="10,8,10,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button BorderBrush="Black" Margin="10,8,10,8" Background="Red" FontFamily="font/#Alef" FontWeight="Bold" Grid.Column="3" FontSize="16" Content="Click to Return Back" Click="Exit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button BorderBrush="Black" Margin="10,8,10,8" Content="Station List" Click="ShowStationsButton_Click" Background="PaleTurquoise" FontFamily="font/#Alef" FontWeight="Bold" Grid.Column="1" FontSize="16">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25,25,25,25"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
            <StackPanel HorizontalAlignment="Left" Margin="120,97,0,0" VerticalAlignment="Top" Width="294" Height="107" Grid.Row="0">
                <TextBlock FontWeight="Bold" FontSize="20" FontFamily="/font/#Alef" Text="Enter Id:" TextWrapping="Wrap"/>
                <TextBox FontSize="20" FontFamily="/font/#Alef" Name="idone" Text="" TextWrapping="Wrap" TextChanged="GetId"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="120,268,0,0" VerticalAlignment="Top" Width="296" Height="108" Grid.Row="0">
                <TextBlock FontWeight="Bold" FontSize="20" FontFamily="/font/#Alef" Text="Choose the maxWeight:" TextWrapping="Wrap" Width="293"/>
                <ComboBox FontSize="20" FontFamily="/font/#Alef" Name="maxWeight" SelectionChanged="GetMaxWeight"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="120,179,0,0" VerticalAlignment="Top" Width="294" Height="107" Grid.Row="0">
                <TextBlock FontWeight="Bold" FontSize="20" FontFamily="/font/#Alef" Text="Enter Model:" TextWrapping="Wrap"/>
                <TextBox FontSize="20" FontFamily="/font/#Alef" Name="moDrone" Text="" TextWrapping="Wrap" TextChanged="GetModel"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="120,358,0,0" VerticalAlignment="Top" Width="297" Height="108">
                <TextBlock FontWeight="Bold" FontSize="20" FontFamily="/font/#Alef" Text="Enter Id of Station to charging:" TextWrapping="Wrap" Width="297"/>
                <TextBox FontSize="20" FontFamily="/font/#Alef" Name="idStationToChrging" Text="" TextWrapping="Wrap" TextChanged="GetIdStationToChrging"/>
            </StackPanel>
            <MediaElement x:Name="Gif" Height="auto" HorizontalAlignment="Left"  MediaEnded="Again_MediaEnded" Source="img\drone1.gif" LoadedBehavior="Play" UnloadedBehavior="Manual" Margin="459,137,0,141" Grid.Row="0" Width="313"/>
        </Grid>
        <!-- -->
        <Grid x:Name="InputBox" Visibility="Hidden">
            <Grid Background="Black" Opacity="0.5"/>
            <Border MinWidth="250" Background="Orange" BorderBrush="Black" BorderThickness="1.5" CornerRadius="0,45,0,45" HorizontalAlignment="Center" VerticalAlignment="Center" Height="75" Width="272">
                <StackPanel>
                    <TextBlock Margin="5" Text="how much time was the drone in charging?" FontWeight="Bold" FontFamily="Cambria" />
                    <TextBox MinWidth="150" HorizontalAlignment="Center" Background="Red" VerticalAlignment="Center" x:Name="InputTextBox" TextChanged="GetTime"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="OkButton" Margin="5" Content="OK" Background="{x:Null}" Click="OkButton_Click" Width="35"/>
                        <Button x:Name="CancelButton" Margin="5" Content="Cancel" Background="{x:Null}" Click="CancelButton_Click" Width="50" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
