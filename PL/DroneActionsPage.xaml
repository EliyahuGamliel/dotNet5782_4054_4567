<Page x:Class="PL.DroneActionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="800"
      Title="DroneActionsPage">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="350*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid Name="UpGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Grid Name="LeftGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Column="0" VerticalAlignment="Stretch" Width="auto">
                <StackPanel HorizontalAlignment="Left" Margin="124,87,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock FontWeight="Bold" Text="The Id of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock Name="idDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="124,137,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock FontWeight="Bold" Text="The Model of the Drone:" TextWrapping="Wrap"/>
                    <TextBox Name="modelDrone" Text="" TextWrapping="Wrap" TextChanged="GetModel"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="124,187,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock FontWeight="Bold" Text="The MaxWeight of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock Name="maxWightDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="124,237,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock FontWeight="Bold" Text="The Battery of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock Name="batteryDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="124,287,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock FontWeight="Bold" Text="The Status of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock Name="statusDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Margin="124,337,0,0" VerticalAlignment="Top" Width="215" Height="107">
                    <TextBlock FontWeight="Bold" Text="The current Location of the Drone:" TextWrapping="Wrap"/>
                    <TextBlock Name="locationDrone" Text="" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Name="MiddleGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="1" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Button Name="updateDrone" Content="Click to Update the Drone" Grid.Column="0" IsEnabled="False" Click="Update_Click"/>
            <Button Name="assignDrone" Content="Click to Assign the &#xa;Drone to Parcel" Grid.Column="1" IsEnabled="False" Click="Assign_Click"/>
            <Button Name="pickUpDrone" Content="Click to PickUp the &#xa;Parcel fron Customer" Grid.Column="2" IsEnabled="False" Click="PickUp_Click"/>
            <Button Name="deliverDrone" Content="Click to Deliver &#xa;Parcel by the Drone" Grid.Column="3" IsEnabled="False" Click="Deliver_Click"/>
        </Grid>
        <Grid Name="DownGrid" HorizontalAlignment="Stretch" Height="auto" Grid.Row="2" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Label Grid.Column="0"/>
            <Button Content="Click to Exit" Grid.Column="3" Click="Exit_Click"/>
            <Button Name="sendDrone" Content="Click to Send&#xa;the Drone to Charging" Grid.Column="0" IsEnabled="False" Click="Send_Click"/>
            <Button Name="releaseDrone" Content="Click to Release the Drone &#xa;from Charging" Grid.Column="1" IsEnabled="False" Click="Release_Click"/>
        </Grid>
    </Grid>
</Page>
